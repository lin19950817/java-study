<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>firstCookie</servlet-name>
        <servlet-class>org.lzn.FirstCookie</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>secondCookie</servlet-name>
        <servlet-class>org.lzn.SecondCookie</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>clearCookie</servlet-name>
        <servlet-class>org.lzn.ClearCookie</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>org.lzn.login.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>doLoginServlet</servlet-name>
        <servlet-class>org.lzn.login.DoLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>showAllBooksServlet</servlet-name>
        <servlet-class>org.lzn.history.ShowAllBooksServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>showBookDetail</servlet-name>
        <servlet-class>org.lzn.history.ShowBookDetail</servlet-class>
    </servlet>

    <!--firstCookie 请求路径-->
    <servlet-mapping>
        <servlet-name>firstCookie</servlet-name>
        <url-pattern>/demo1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>firstCookie</servlet-name>
        <url-pattern>/path/demo1</url-pattern>
    </servlet-mapping>
    <!--secondCookie 请求路径-->
    <servlet-mapping>
        <servlet-name>secondCookie</servlet-name>
        <url-pattern>/demo2</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>secondCookie</servlet-name>
        <url-pattern>/path/demo2</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>clearCookie</servlet-name>
        <url-pattern>/path/clear</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>doLoginServlet</servlet-name>
        <url-pattern>/doLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>showAllBooksServlet</servlet-name>
        <url-pattern>/showAllBooks</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>showBookDetail</servlet-name>
        <url-pattern>/showBookDetail</url-pattern>
    </servlet-mapping>
</web-app>