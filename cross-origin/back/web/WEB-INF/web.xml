<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>jsonpServlet</servlet-name>
        <servlet-class>org.lzn.servlet.JsonpServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>corsCommonServlet</servlet-name>
        <servlet-class>org.lzn.servlet.CorsCommonServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>corsServlet</servlet-name>
        <servlet-class>org.lzn.servlet.CorsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>jsonpServlet</servlet-name>
        <url-pattern>/jsonpServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>corsCommonServlet</servlet-name>
        <url-pattern>/corsCommonServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>corsServlet</servlet-name>
        <url-pattern>/corsServlet</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>welcome.jsp</welcome-file>
    </welcome-file-list>
</web-app>